#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

mkdir -p "$ASDF_INSTALL_PATH/bin"

release_file="$ASDF_DOWNLOAD_PATH/voyager"

if [ ! -f "$release_file" ]; then
  fail "Expected release file to be at $release_file"
fi

cp "$release_file" "$ASDF_INSTALL_PATH/bin/"
chmod +x "$ASDF_INSTALL_PATH/bin/voyager"